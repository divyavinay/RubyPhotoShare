<p id="notice"><%= notice %></p>

<h1 align="center" id="photoShareHeader">PhotoShare Users List</h1>

<div class ="Table">
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">User List</div>

    <!-- Table -->
    <table class="table">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= link_to 'Show Photos', user %></td>
          </tr>
      <% end %>
      </tr>
    </table>
  </div>


</div>